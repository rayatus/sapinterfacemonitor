FORM start_of_selection .
  DATA: ls_filters TYPE zcl_intfmonitor_gui_appl=>mtyp_s_filter_by.

  ls_filters-intfid       = s_intid[].
  ls_filters-procdate     = s_prcdt[].
  ls_filters-proctime     = s_prctm[].
  ls_filters-procby       = s_prcby[].
  ls_filters-procendtype  = s_prctp[].

  go_appl->search( ls_filters ).

